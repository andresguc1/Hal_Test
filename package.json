{
  "name": "my-react-flow-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "serve -s dist",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint \"./src/**/*.{js,ts,jsx,tsx}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md,css,scss,html}\" --ignore-path .gitignore",
    "prepare": "node .husky/install.mjs",
    "precommit": "lint-staged",
    "clean": "rimraf dist .cache",
    "analyze": "vite build --mode production --report"
  },
  "dependencies": {
    "@xyflow/react": "^12.9.0",
    "dexie": "^4.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "serve": "^14.2.5",
    "vite": "^7.1.7",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "hal_test/src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.5%"
  ]
}
